<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingHorizontal="16dp"
        android:scrollbars="none"
        tools:ignore="UselessParent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:text="倍速"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <HorizontalScrollView
                android:id="@+id/speed_horizontal_scroll_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:id="@+id/container_speed"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/speed0"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_r_common_stroke_primary"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:singleLine="true"
                        android:text="x0.5"
                        android:textColor="@color/colorPrimary"
                        android:textColorLink="@color/colorPrimary"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/speed1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_r_common_stroke_primary"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:singleLine="true"
                        android:text="x1.0"
                        android:textColor="@color/colorPrimary"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/speed2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_r_common_stroke_primary"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:singleLine="true"
                        android:text="x1.25"
                        android:textColor="@color/colorPrimary"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/speed3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_r_common_stroke_primary"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:singleLine="true"
                        android:text="x1.5"
                        android:textColor="@color/colorPrimary"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/speed4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_r_common_stroke_primary"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:singleLine="true"
                        android:text="x1.75"
                        android:textColor="@color/colorPrimary"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/speed5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_r_common_stroke_primary"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:singleLine="true"
                        android:text="x2.0"
                        android:textColor="@color/colorPrimary"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/speed6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_r_common_stroke_primary"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:singleLine="true"
                        android:text="x2.5"
                        android:textColor="@color/colorPrimary"
                        tools:ignore="HardcodedText" />

                    <TextView
                        android:id="@+id/speed7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="8dp"
                        android:background="@drawable/bg_r_common_stroke_primary"
                        android:gravity="center"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="4dp"
                        android:singleLine="true"
                        android:text="x3.0"
                        android:textColor="@color/colorPrimary"
                        tools:ignore="HardcodedText" />
                </LinearLayout>
            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:text="缩放"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <TextView
                android:id="@+id/scale"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_r_common_stroke_primary"
                android:drawablePadding="8dp"
                android:gravity="center"
                android:paddingHorizontal="10dp"
                android:paddingVertical="4dp"
                android:singleLine="true"
                android:textColor="@color/colorPrimary"
                app:drawableEndCompat="@drawable/ic_change_20"
                tools:text="16:9" />


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:text="跳过片头/片尾"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/decrease_start"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:contentDescription="片头减少"
                    android:src="@drawable/icon_back"
                    app:tint="@color/text_foreground"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/play_time_start"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/bg_r_common_stroke_primary"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    tools:text="片头" />

                <ImageView
                    android:id="@+id/increase_start"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:contentDescription="片头增加"
                    android:src="@drawable/icon_pre"
                    app:tint="@color/text_foreground"
                    tools:ignore="HardcodedText" />

                <ImageView
                    android:id="@+id/decrease_end"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_marginStart="10dp"
                    android:contentDescription="片尾减少"
                    android:src="@drawable/icon_back"
                    app:tint="@color/text_foreground"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/play_time_end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:background="@drawable/bg_r_common_stroke_primary"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    tools:text="片尾" />

                <ImageView
                    android:id="@+id/increase_end"
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:contentDescription="片尾增加"
                    android:src="@drawable/icon_pre"
                    app:tint="@color/text_foreground"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/start_end_reset"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_r_common_stroke_primary"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:singleLine="true"
                    android:text="重置"
                    android:textColor="@color/colorPrimary"
                    tools:ignore="HardcodedText" />
            </LinearLayout>


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:text="播放器"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/player"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_r_common_stroke_primary"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    app:drawableEndCompat="@drawable/ic_change_20"
                    tools:text="EXO" />

                <TextView
                    android:id="@+id/decode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_r_common_stroke_primary"
                    android:drawablePadding="8dp"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:singleLine="true"
                    android:textColor="@color/colorPrimary"
                    app:drawableEndCompat="@drawable/ic_change_20"
                    tools:text="硬解" />


            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:text="其他"
                android:textColor="?android:attr/textColorPrimary"
                android:textSize="16sp"
                android:textStyle="bold"
                tools:ignore="HardcodedText" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/landscape_portrait"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_r_common_stroke_primary"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:singleLine="true"
                    android:text="横竖屏"
                    android:textColor="@color/colorPrimary"
                    android:visibility="gone"
                    tools:ignore="HardcodedText"
                    tools:visibility="visible" />

                <TextView
                    android:id="@+id/subtitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_r_common_stroke_primary"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:singleLine="true"
                    android:text="字幕"
                    android:textColor="@color/colorPrimary"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/voice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_r_common_stroke_primary"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:singleLine="true"
                    android:text="音轨"
                    android:textColor="@color/colorPrimary"
                    tools:ignore="HardcodedText" />


                <TextView
                    android:id="@+id/replay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_r_common_stroke_primary"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:singleLine="true"
                    android:text="重播"
                    android:textColor="@color/colorPrimary"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/refresh"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_r_common_stroke_primary"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:singleLine="true"
                    android:text="刷新"
                    android:textColor="@color/colorPrimary"
                    tools:ignore="HardcodedText" />

                <TextView
                    android:id="@+id/download"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:background="@drawable/bg_r_common_stroke_primary"
                    android:gravity="center"
                    android:paddingHorizontal="10dp"
                    android:paddingVertical="4dp"
                    android:singleLine="true"
                    android:text="下载"
                    android:textColor="@color/colorPrimary"
                    android:visibility="gone"
                    tools:ignore="HardcodedText"
                    tools:visibility="visible" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>